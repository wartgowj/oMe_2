<script src="js/item.js" type="text/javascript"></script>
<script src="js/transaction.js" type="text/javascript"></script>

<div class="container">
    <h1>Items You Have Lent Out </h1>
        {{#each lentItems}}
            <ul class="collection">
                <li class="collection-item avatar">
                    <img src="{{{this.borrower.image}}}" alt="" class="circle">
                    <span class="title">Borrower: {{this.borrower.name}} </span>
                    <p>Item Borrowed: {{this.Item.name}}
                    <br> Due Date: {{this.due_date}}
                    </p>
                    <a href="#!" class="secondary-content">
                    <i class="material-icons">grade</i>
                    </a>
                </li>
            </ul>
        {{/each}}
    <a class="waves-effect waves-light btn modal-trigger" href="#addBorrow">borrow</a>
</div>

<div class="container">
    <h1>Items You Have Borrowed </h1>
    {{#each loanedItems}}
    <ul class="collection">
        <li class="collection-item avatar">
            <img src="{{{this.owner.image}}}" alt="" class="circle">
            <span class="title">Lender: {{this.owner.name}} </span>
            <p>Item Borrowed: {{this.Item.name}}
                <br> Due Date: {{this.due_date}}
            </p>
            <a href="#!" class="secondary-content">
                <i class="material-icons">grade</i>
            </a>
        </li>
    </ul>
    {{/each}}
    <a class="waves-effect waves-light btn modal-trigger" href="#addLend">Lend</a>
</div>
       

<div id="addBorrow" class="modal">
    <div class="modal-content">
        <h4>"Borrow" an item ...</h4>
        <h4 id="borrowerName"></h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s8">
                        <i class="material-icons prefix">thumbs_up_down</i>
                        <input placeholder="favor, money, thing" id="itemBorrow" type="text" class="validate">
                        <label for="itemBorrow">item that you might return ...</label>
                    </div>
                    <div class="input-field col s4">
                        <select>
                            <option value="" disabled selected>Type of Item</option>
                            <option value="1">Money</option>
                            <option value="2">Favor</option>
                            <option value="3">Thing</option>
                        </select>
                        <label>Category</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="owner" type="text" class="validate">
                        <label for="owner">the generous and obviously gullible person lending you this item...</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">date_range</i>
                        <input id="dueDate" type="text" class="datepicker">
                        <label for="dueDate">are you sure you want to put a return date?</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button href="#!" class="modal-action modal-close waves-effect waves-green btn-flat borrow">Add Now</button>
    </div>
</div>

<div id="addLend" class="modal">
    <div class="modal-content">
        <h4>Lend an item that you probably won't get back...</h4>
        <h4 id="lenderName"></h4>
        <div class="row">
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s8">
                        <i class="material-icons prefix">thumbs_up_down</i>
                        <input placeholder="favor, money, thing" id="itemBorrow" type="text" class="validate">
                        <label for="itemBorrow">item that you might get back ...</label>
                    </div>
                    <div class="input-field col s4">
                        <select>
                            <option value="" disabled selected>Type of Item</option>
                            <option value="1">Money</option>
                            <option value="2">Favor</option>
                            <option value="3">Thing</option>
                        </select>
                        <label>Category</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="owner" type="text" class="validate">
                        <label for="owner">lowlife you call a friend that is borrowing this item...</label>
                    </div>
                    <div class="input-field col s12">
                        <i class="material-icons prefix">date_range</i>
                        <input id="dueDate" type="text" class="datepicker">
                        <label for="dueDate">One day in the future that you might get this back</label>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button href="#!" class="modal-action modal-close waves-effect waves-green btn-flat lend">Add Now</button>
    </div>
</div>
<br>

<script type="text/javascript">
    $(document).ready(function(){
        $('.modal').modal();
        $('select').material_select();
    });
    $('.datepicker').pickadate({
        selectMonths: true, // Creates a dropdown to control month
        selectYears: 15, // Creates a dropdown of 15 years to control year,
        today: 'Today',
        clear: 'Clear',
        close: 'Ok',
        closeOnSelect: false // Close upon selecting a date,
    });

    var userId = sessionStorage.getItem('userId');
    var username = sessionStorage.getItem('username');
    var image = sessionStorage.getItem('image');
    console.log(userId);
    $('#borrowerName').text(username);
    $('#lenderName').text(username);
</script>

